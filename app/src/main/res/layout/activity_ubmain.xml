<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context=".UBMainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D0"
        android:id="@+id/buttonD0"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="onButtonD0clicked"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D1"
        android:id="@+id/buttonD1"
        android:layout_below="@+id/buttonD0"
        android:layout_alignParentStart="true"
        android:onClick="onButtonD1clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D2"
        android:id="@+id/buttonD2"
        android:layout_below="@+id/buttonD1"
        android:layout_alignEnd="@+id/buttonD1"
        android:onClick="onButtonD2clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D3"
        android:id="@+id/buttonD3"
        android:layout_below="@+id/buttonD2"
        android:layout_alignEnd="@+id/buttonD2"
        android:onClick="onButtonD3clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D4"
        android:id="@+id/buttonD4"
        android:layout_below="@+id/buttonD3"
        android:layout_alignParentStart="true"
        android:onClick="onButtonD4clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D5"
        android:id="@+id/buttonD5"
        android:onClick="onButtonD5clicked"
        android:layout_below="@+id/buttonD4"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D6"
        android:id="@+id/buttonD6"
        android:layout_below="@+id/buttonD5"
        android:layout_alignEnd="@+id/buttonD5"
        android:onClick="onButtonD6clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D7"
        android:id="@+id/buttonD7"
        android:layout_below="@+id/buttonD6"
        android:layout_alignParentStart="true"
        android:onClick="onButtonD7clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A0"
        android:id="@+id/buttonA0"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonA0clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A1"
        android:id="@+id/buttonA1"
        android:layout_below="@+id/buttonA0"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonA1clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A2"
        android:id="@+id/buttonA2"
        android:layout_below="@+id/buttonA1"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonA2clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A3"
        android:id="@+id/buttonA3"
        android:layout_below="@+id/buttonA2"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonA3clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A4"
        android:id="@+id/buttonA4"
        android:layout_above="@+id/buttonD5"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonA5clicked" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A5"
        android:id="@+id/buttonA5"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:onClick="onButtonA5clicked" />

</RelativeLayout>
